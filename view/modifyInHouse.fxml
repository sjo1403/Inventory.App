<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="560.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.modifyInHouseScreenController">
   <children>
      <HBox prefHeight="50.0" prefWidth="500.0">
         <children>
            <Label text="Modify Part">
               <HBox.margin>
                  <Insets left="50.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
            </Label>
            <RadioButton fx:id="inHouseBttn" mnemonicParsing="false" onAction="#inHouseBttn" selected="true" text="In-House">
               <HBox.margin>
                  <Insets left="50.0" top="15.0" />
               </HBox.margin>
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroup1" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="outsourcedBttn" mnemonicParsing="false" onAction="#outsourcedBttn" text="Outsourced" toggleGroup="$toggleGroup1">
               <HBox.margin>
                  <Insets left="50.0" top="15.0" />
               </HBox.margin>
            </RadioButton>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
      <AnchorPane layoutY="54.0" prefHeight="300.0" prefWidth="560.0">
         <children>
            <HBox prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="ID">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="IDtxt" editable="false" opacity="0.5" style="-fx-background-color: gray;" text="Auto Gen- Disabled">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Italic" size="13.0" />
                     </font>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="50.0" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="Name">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="nameTxt">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="100.0" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="Inv">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="invTxt">
                     <HBox.margin>
                        <Insets left="47.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="150.0" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="Price/Cost">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="priceTxt">
                     <HBox.margin>
                        <Insets left="7.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="200.0" prefHeight="50.0" prefWidth="580.0">
               <children>
                  <Label text="Max">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="maxTxt">
                     <HBox.margin>
                        <Insets left="42.0" />
                     </HBox.margin>
                  </TextField>
                  <Label text="Min">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="minTxt">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox layoutY="250.0" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label text="Machine ID">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="machineTxt">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
         </children>
      </AnchorPane>
      <HBox layoutY="372.0" prefHeight="50.0" prefWidth="500.0">
         <children>
            <Button fx:id="saveBttn" mnemonicParsing="false" onAction="#saveBttn" text="Save">
               <HBox.margin>
                  <Insets left="300.0" top="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelBttn" mnemonicParsing="false" onAction="#cancelBttn" text="Cancel">
               <HBox.margin>
                  <Insets left="30.0" top="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
